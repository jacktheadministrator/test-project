pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Run test') {
            steps {
                echo 'Running test.sh'
                sh "chmod +x -R ${env.WORKSPACE}"
                sh './test.sh'
            }
        }
        stage('uname -a') {
            steps {
                echo 'Running uname -a'
                sh 'uname -a'
            }
        }
        stage('apt-get install sudo') {
            steps {
                echo 'apt-get install sudo'
                sh 'apt-get install sudo'
            }
        }
        stage('apt-get update') {
            steps {
                echo 'apt-get update'
                sh 'apt-get update'
            }
        }        
        stage('yum list installed') {
            steps {
                echo 'yum list installed'
                sh 'yum list installed'
            }
        }
    }
}

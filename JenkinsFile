pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Run test') {
            steps {
                echo 'Running test.sh'
                sh "chmod +x -R ${env.WORKSPACE}"
                sh './test.sh'
            }
        }
        stage('Terraform --version') {
            steps {
                echo 'Running terraform --version'
                sh "chmod +x -R ${env.WORKSPACE}"
                sh 'terraform --version'
            }
        }
    }
}
